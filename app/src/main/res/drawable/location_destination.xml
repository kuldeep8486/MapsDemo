<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- larger circle at the back -->
    <item>
        <shape android:shape="rectangle">

            <padding
                android:bottom="@dimen/marker_outer_size"
                android:left="@dimen/marker_outer_size"
                android:right="@dimen/marker_outer_size"
                android:top="@dimen/marker_outer_size" />

            <solid android:color="@color/black" />
        </shape>
    </item>

    <!-- inner circle -->
    <item>
        <shape android:shape="oval">

            <size
                android:width="@dimen/marker_inner_size"
                android:height="@dimen/marker_inner_size" />

            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>